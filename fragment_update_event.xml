<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound"
    tools:context=".fragment.Event.UpdateEventFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Event"
            android:textSize="20dp"
            android:textColor="#000"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/eventNameEt"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/signupuser"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint=" Event Name"
            />

        <EditText
            android:id="@+id/startingEt"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/startlocation"
            android:hint=" Starting Location "
            />

        <EditText
            android:id="@+id/destinationEt"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/destination"
            android:hint=" Destination "
            />
        <EditText
            android:id="@+id/departureEt"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/depaturedate"
            android:hint=" Departure Date"
            />


        <EditText
            android:id="@+id/budgetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Estimated Budget"
            android:drawableLeft="@drawable/money"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/updateEventButton"
            android:layout_marginTop="15dp"
            android:background="#1a85ba"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="Update Event"/>
        <ProgressBar
            android:id="@+id/progrssbar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        />

    </LinearLayout>

</FrameLayout>